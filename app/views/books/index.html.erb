<p id="notice">
 <%= notice %> 
</p>


<h2>Books</h2>

<table>
<THEAD>
<tr>
   <th> <h5>title</h5></th>
   <th> <h5>body</h5></th>
 </tr>
 </THEAD>

  <% @books.each do |book| %>

<tr>
<td><%= book.title %></td>
<td><%= book.body %></td>	
<td><%= link_to 'Show', book_path(book)  %></td>
<td><%= link_to 'Edit', edit_book_path(book.id) %> </td>
<td><%= link_to 'Deleate', book_path(book), method: :delete, data: {confirm: 'Are you sure?'} %></td>

 </tr>
 <% end %>
 
</table>


<h3>New Books</h3>
<%= form_for @book do |f| %>

    <h5>Title</h5>
    <%= f.text_field :title %>
    <h5>Body</h5>
    <%= f.text_area :body %>
    
	<%= f.submit 'Create Book' %>
 
   <% end %>